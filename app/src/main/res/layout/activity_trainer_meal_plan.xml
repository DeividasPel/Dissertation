<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_blackblurry">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/text_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRAINER DASHBOARD"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/username_dashboard_trainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Surname"
                    android:layout_below="@+id/text_dashboard"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/unkown"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/unknownimage" />

            </RelativeLayout>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="45dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MEAL PLANS"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_trainee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Name Surname"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/tv_name_settings_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_breakfast1_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BREAKFAST MEAL 1"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_breakfast1_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_breakfast1_trainer"
                                    android:hint="Enter breakfast meal 1"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tv_surname_settings_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="14dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_breakfast2_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BREAKFAST MEAL 2"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_breakfast2_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_breakfast2_trainer"
                                    android:hint="Enter breakfast meal 2"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tv_dob_settings_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="14dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_breakfast3_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BREAKFAST MEAL 3"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_breakfast3_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_breakfast3_trainer"
                                    android:hint="Enter breakfast meal 3"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tv_gender_settings_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"

                            android:paddingTop="14dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_breakfast_notes_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BREAKFAST NOTES"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_breakfast_notes_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_breakfast_notes_trainer"
                                    android:hint="Enter breakfast notes"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="40dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_lunch1_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LUNCH MEAL 1"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_lunch1_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_lunch1_trainer"
                                    android:hint="Enter lunch meal 1"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="14dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_lunch2_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LUNCH MEAL 2"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_lunch2_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_lunch2_trainer"
                                    android:hint="Enter lunch meal 2"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="14dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_lunch3_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LUNCH MEAL 3"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_lunch3_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_lunch3_trainer"
                                    android:hint="Enter lunch meal 3"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="14dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_lunch_notes_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LUNCH NOTES"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_lunch_notes_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_lunch_notes_trainer"
                                    android:hint="Enter lunch notes"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="40dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_dinner1_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DINNER MEAL 1"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_dinner1_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_dinner1_trainer"
                                    android:hint="Enter dinner meal 1"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="14dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_dinner2_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DINNER MEAL 2"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_dinner2_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_dinner2_trainer"
                                    android:hint="Enter dinner meal 2"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="14dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_dinner3_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DINNER MEAL 3"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_dinner3_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_dinner3_trainer"
                                    android:hint="Enter dinner meal 3"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="14dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_dinner_notes_trainer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DINNER NOTES"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_dinner_notes_trainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_dinner_notes_trainer"
                                    android:hint="Enter dinner notes"
                                    android:textSize="15dp"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:showDividers="end"
                            android:orientation="vertical"
                            android:paddingTop="14dp">

                            <Button
                                android:id="@+id/btn_clear_meals"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@color/black"
                                android:text="CLEAR ALL MEALS"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/btn_update_meal_plan"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@color/black"
                                android:text="UPDATE MEALS"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>


            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>